
<h1>Login</h1>
<hr>

<%= form_tag '/login' do %>
<div>
  <p><strong>Email:</strong></p>
  <div><%= text_field_tag :email, "", class: 'log-reg-input' %></div>
  
  <p><strong>Password:</strong></p>
  <div><%= password_field_tag :password, "", class: 'log-reg-input' %></div>
  
  <%= submit_tag "Login", class: 'btn btn-primary' %>
</div>   
<% end %>
<hr>



  